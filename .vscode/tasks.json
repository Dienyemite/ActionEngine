{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Release",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Compile Shaders",
            "type": "shell",
            "command": "${workspaceFolder}/compile_shaders.bat",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Game",
            "type": "shell",
            "command": "${workspaceFolder}/build/Release/Game.exe",
            "dependsOn": "Build Release",
            "group": "test"
        }
    ]
}
